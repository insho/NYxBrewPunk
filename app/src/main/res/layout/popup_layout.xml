<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:fitsSystemWindows="true"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/toolbar" />

<ScrollView

    android:background="@drawable/popupdrawable"
    android:layout_margin="2dp"
    android:scrollbars="none"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_marginLeft="4dp"
    android:layout_marginStart="4dp"

    android:layout_height="wrap_content">


        <TextView
            android:text="ArticleTitle"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/articleTitle" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:padding="10dip"
            android:layout_marginTop="2dp"
            android:background="?android:attr/listDivider"
            android:visibility="visible"
            android:alpha="50"/>

    <TextView
        android:text="Recommended Beer:"
        android:textSize="18sp"
        android:layout_marginTop="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

        <TextView
            android:text=""
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:id="@+id/recommendedBeer" />


    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        android:indeterminateDrawable="@drawable/progress" >
    </ProgressBar>

    <TextView
        android:text="Loading Image... "
        android:layout_marginTop="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/loadingtext"
        android:textSize="18sp" />


        <ImageView
            android:layout_width="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:id="@+id/beerImage"/>

    <TextView
        android:text="Recommended on: "
        android:layout_marginTop="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp" />

        <TextView
            android:text="Recommended on: "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:id="@+id/recommendationcriteria" />

    <TextView
        android:text="Description:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textSize="18sp" />

        <TextView
            android:text="Beer Info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:id="@+id/beerInfo" />





</LinearLayout>
    </ScrollView>
    </LinearLayout>