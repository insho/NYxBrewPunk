    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@android:color/transparent"
    android:id="@+id/popuptab_layout"
    android:fitsSystemWindows="true"
        android:layout_height="match_parent">

    <TextView
        android:text=" "
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:id="@+id/status_bar_spacer" />

    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:background="@android:color/white"
        android:fitsSystemWindows="true"
        android:layout_height="match_parent">

        <TextView
            android:text="ArticleTitle"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:background="@color/primary_dark"
            android:id="@+id/articleTitle" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:padding="10dip"
            android:layout_marginTop="2dp"
            android:background="?android:attr/listDivider"
            android:visibility="visible"
            android:alpha="50"/>

        <!--<TextView-->
            <!--android:text="Recommended Beer:"-->
            <!--android:textSize="18sp"-->
            <!--android:layout_marginTop="4dp"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content" />-->

        <TextView
            android:text=""
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:id="@+id/recommendedBeer" />


        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:visibility="gone"
            android:alpha=".5"
            android:indeterminateDrawable="@drawable/progress" >
        </ProgressBar>

    <TextView
        android:text="Loading Image... "
        android:layout_marginTop="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/loadingtext"
        android:layout_gravity="center_horizontal"
        android:textSize="20sp"
        android:alpha=".5"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:id="@+id/beerImage"/>

        <!--<TextView-->
            <!--android:text="Recommended on: "-->
            <!--android:layout_marginTop="20dp"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:textSize="18sp" />-->

        <TextView
        android:text="Recommended on: "
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        android:id="@+id/recommendationcriteria" />

        <TextView
        android:text="abv:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginTop="8dp"
        android:id="@+id/abv" />

        <TextView
            android:text="ibu:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginTop="8dp"
            android:id="@+id/ibu" />



        <!--<TextView-->
            <!--android:text="Description:"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginTop="4dp"-->
            <!--android:textSize="18sp" />-->

        <TextView
            android:text="Beer Info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            android:id="@+id/beerInfo" />



    </LinearLayout>

    </LinearLayout>
